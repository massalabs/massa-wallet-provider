{
    "name": "@massalabs/wallet-provider",
    "version": "1.4.0",
    "description": "massa's wallet provider",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "up": "npm update",
        "check": "npm outdated",
        "upgrade": "npm run up && npm run check && npm run build",
        "clean-dist": "rimraf dist/*",
        "build-package": "tsc -d -p ./tsconfig.json",
        "build-esm": "tsc --project tsconfig.esm.json",
        "build-commonjs": "tsc --project tsconfig.commonjs.json",
        "build-bundle": "webpack",
        "build": "npm run fmt && npm-run-all clean-dist build-*",
        "test-extension:serve-dapp": "cp ./bundle.js ./test-extension/dapp/bundle.js && http-server test-extension/dapp --cors --port 9009",
        "test-extension": "cd ./test-extension && npx playwright test",
        "unit-test-package": "jest --config ./jest.config.package.js",
        "unit-test-commonjs": "jest --config ./jest.config.commonjs.js",
        "unit-test-esm": "jest --config ./jest.config.esm.js",
        "unit-test": "npm-run-all unit-test-*",
        "unit-test-local": "NODE_EXTRA_CA_CERTS=/etc/massastation/certs/rootCA.pem npm-run-all unit-test-*",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "fmt": "npm run prettier:fix && npm run lint:fix",
        "fmt:check": "npm run prettier && npm run lint",
        "doc": "typedoc src/index.ts --name massa-wallet-provider --out docs/documentation/html --tsconfig tsconfig.json"
    },
    "author": "Massa Labs <info@massa.net>",
    "contributors": [
        "Evgeni Pirianov"
    ],
    "license": "(MIT AND Apache-2.0)",
    "homepage": "https://github.com/massalabs/massa-wallet-provider",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/massalabs/massa-wallet-provider"
    },
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "keywords": [
        "web3",
        "ts",
        "sdk",
        "massa"
    ],
    "files": [
        "dist",
        "bundle.js",
        "bundle.min.js"
    ],
    "dependencies": {
        "@hicaru/bearby.js": "^0.5.0",
        "@massalabs/web3-utils": "^1.4.1",
        "axios": "^0.26.1",
        "bignumber.js": "^9.1.1",
        "bs58check": "^3.0.1",
        "buffer": "^6.0.3",
        "uid": "^2.0.1",
        "varint": "^6.0.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.14",
        "@massalabs/eslint-config": "^0.0.9",
        "@massalabs/prettier-config-as": "^0.0.2",
        "@playwright/test": "^1.32.3",
        "@types/bn.js": "^5.1.1",
        "@types/chai": "^4.3.4",
        "@types/jest": "^29.5.4",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.13.0",
        "@types/secp256k1": "^4.0.3",
        "babel-jest": "^29.6.4",
        "browserify": "^17.0.0",
        "chai": "^4.3.7",
        "chalk": "^4.1.0",
        "eslint-plugin-jsdoc": "^41.1.1",
        "express": "^4.18.2",
        "fs-extra": "^11.1.1",
        "http-server": "^14.1.1",
        "jest": "^29.6.4",
        "jest-environment-jsdom": "^29.6.4",
        "mocha": "^10.2.0",
        "node-ts": "^5.1.2",
        "prettier": "^2.8.4",
        "prettier-eslint": "^15.0.1",
        "prettier-standard": "^16.4.1",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "tslib": "^2.5.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.23.25",
        "typescript": "^4.9.5",
        "uglify-js": "^3.17.4",
        "uglifyify": "^5.0.2",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.7",
        "utf-8-validate": "^6.0.2"
    },
    "prettier": "@massalabs/prettier-config-as",
    "_moduleAliases": {
        "@massalabs/wallet-provider": "./dist/index.js"
    }
}
